separator=false
separator_block_width=15

[bandwidth]
command=bash ~/dotfiles/bin/bandwidth.sh
interval=1
INTERFACE=wlp4s0

[updates]
command=python ~/dotfiles/bin/updates.py
interval=300
markup=pango

[currency]
command=python ~/dotfiles/bin/currency.py
interval=once
markup=pango

[cpu]
command=python ~/dotfiles/bin/cpu.py
interval=1
markup=pango

[memory]
command=python ~/dotfiles/bin/mem.py
interval=1
markup=pango

[battery]
command=python ~/dotfiles/bin/battery.py
interval=30
markup=pango

[time]
command=echo "`date +'%a %d %b'` <b>`date +'%T'`</b> "
interval=1
markup=pango
